<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!--<item name="android:windowFullscreen">true</item>-->
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:actionBarStyle">@style/CustomActionBar</item>
        <!-- enable window content transitions -->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowSharedElementReenterTransition">@null</item>
        <item name="android:windowReenterTransition">@null</item>
        <item name="android:windowAllowReturnTransitionOverlap">false</item>
    </style>

    <style name="CustomActionBar" parent="android:Widget.Material.Light.ActionBar.Solid">
        <item name="android:elevation">0dp</item>
        <item name="android:displayOptions">homeAsUp</item>
    </style>

    <style name="CustomImageButton" parent="android:Widget.Material.ImageButton">
        <item name="android:background">@null</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="CustomTextView" parent="android:Widget.Material.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ProductTitleTextView" parent="android:Widget.Material.TextView">
        <item name="android:textColor">@color/purple_dark</item>
        <item name="android:textSize">@dimen/text_view_18_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginBottom">@dimen/text_view_margin</item>
        <item name="android:layout_marginTop">@dimen/text_view_margin_x2</item>
    </style>

    <style name="PriceTextView" parent="android:Widget.Material.TextView">
        <item name="android:textColor">@color/purple_dark</item>
        <item name="android:textSize">@dimen/text_view_16_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="TextAppearance.Header.Large" parent="android:TextAppearance.Large">
        <item name="android:textColor">@color/purple_dark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterTransition">@transition/activity_transition</item>
        <item name="android:windowExitTransition">@transition/activity_transition</item>
    </style>
</resources>
