<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/container"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/product_name"
            android:text="NEW! Snowflake babydoll"
            style="@style/ProductTitleTextView"/>

        <TextView
            android:id="@+id/product_sub_name"
            android:text="Dream Angels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/product_price"
                android:text="199$"
                style="@style/PriceTextView"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/product_sale_price"
                android:text="SALE$79"
                style="@style/PriceTextView"
                android:layout_toEndOf="@id/product_price"
                android:textColor="@color/red"
                android:layout_marginStart="@dimen/text_view_margin"/>

            <ImageView
                android:id="@+id/image_like"
                style="@style/CustomImageButton"
                android:layout_alignParentEnd="true"
                android:src="@drawable/heart"/>

            <TextView
                android:id="@+id/count_like"
                android:text="344"
                style="@style/PriceTextView"
                android:layout_toStartOf="@id/image_like"
                android:textColor="@color/red"
                android:layout_marginEnd="@dimen/text_view_margin"/>

        </RelativeLayout>

        <TextView
            style="@style/CustomTextView"
            android:text="@string/label_description"
            android:layout_marginTop="@dimen/activity_vertical_margin" />

        <TextView
            android:id="@+id/product_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/product_description"
            android:layout_marginTop="@dimen/text_view_margin"/>

        <ImageButton
            android:id="@+id/button_checkmark"
            style="@style/CustomImageButton"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/checkmark_button"/>

    </LinearLayout>

</ScrollView>