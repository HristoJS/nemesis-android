<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ProductActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/container">

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp">

            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="300dp"/>

            <TextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/ProductTitleTextView"
                android:layout_below="@id/pager"/>

            <TextView
                android:id="@+id/product_sub_name"
                android:text="Dream Angels"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:layout_below="@id/product_name"/>

            <RelativeLayout
                android:id="@+id/price_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="horizontal"
                android:layout_below="@id/product_sub_name">

                <TextView
                    android:id="@+id/product_price"
                    android:text="199$"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/PriceTextView"
                    android:layout_alignParentStart="true"/>

                <TextView
                    android:id="@+id/product_discounted_price"
                    android:text="SALE$79"
                    style="@style/PriceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/product_price"
                    android:textColor="@color/red"
                    android:layout_marginStart="@dimen/text_view_margin"/>

                <ImageView
                    android:id="@+id/image_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/CustomImageButton"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/heart"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/rating"
                    android:text="344"
                    style="@style/PriceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/image_like"
                    android:textColor="@color/red"
                    android:layout_marginEnd="@dimen/text_view_margin"
                    android:visibility="gone"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/CustomTextView"
                android:text="@string/label_description"
                android:layout_below="@id/price_container"
                android:layout_marginTop="@dimen/activity_vertical_margin" />

            <TextView
                android:id="@+id/product_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/product_description"
                android:layout_below="@id/description"
                android:layout_marginTop="@dimen/text_view_margin"/>

            <ImageButton
                android:id="@+id/button_checkmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/CustomImageButton"
                android:layout_marginTop="10dp"
                android:src="@drawable/checkmark_button"
                android:layout_below="@id/product_description"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

    </LinearLayout>
</ScrollView>